{
  "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/identity.traits.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "Email"
        },
        "username": {
          "type": "string",
          "title": "Username"
        }
      },
      "anyOf": [
        {
          "required": ["email"]
        },
        {
          "required": ["username"]
        }
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["traits"]
}
